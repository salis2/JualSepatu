<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_Sepatu_Card"
    android:layout_marginTop="20px"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <include
            android:id="@+id/sepatu_author_layout"
            layout="@layout/include_sepatu_penjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <include
            layout="@layout/include_sepatu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/sepatu_author_layout"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sepatu_author_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sepatu_author_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">




        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>